{
  "permissions": {
    "allow": [
      "Edit(*)",
      "Write(*)",
      "Bash(npm *)",
      "Bash(npx *)",
      "Bash(node *)",
      "Bash(git *)",
      "Bash(mkdir *)",
      "Bash(mkdir -p *)",
      "Bash(ls *)",
      "Bash(sqlite3 *)",
      "Bash(grep *)",
      "Bash(chmod *)",
      "WebFetch(domain:*)",
      "WebSearch"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PROJECT_DIR}/.claude/hooks/git-skill-reminder.sh",
            "timeout": 5000
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PROJECT_DIR}/.claude/hooks/check-console-log.sh",
            "timeout": 5000
          }
        ]
      }
    ]
  }
}
